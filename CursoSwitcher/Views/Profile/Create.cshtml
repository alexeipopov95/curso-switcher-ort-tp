@model CursoSwitcher.Models.ProfileModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Nuevo Perfil</h1>

<h4>Perfil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Last_name" class="control-label"></label>
                <input asp-for="Last_name" class="form-control" />
                <span asp-validation-for="Last_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Contraseña</label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Is_moderator" /> @Html.DisplayNameFor(model => model.Is_moderator)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Seleccionar Curso</label>
                <select asp-for="CourseId" class ="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CareerId" class="control-label">Seleccionar Carrera</label>
                <select asp-for="CareerId" class ="form-control" asp-items="ViewBag.CareerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CampusId" class="control-label">Seleccionar Sede</label>
                <select asp-for="CampusId" class ="form-control" asp-items="ViewBag.CampusId"></select>
            </div>
            <div class="form-group" style="display:inline-block;">
                <input type="submit" value="Crear Perfil" class="btn btn-primary" />
            </div>
            <div style="display:inline-block;">
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
