@model CursoSwitcher.Models.RequestsModel

@{
    var TITLE = "Solicitudes";
    ViewData["Title"] = TITLE;
}

<h1>@TITLE</h1>

<hr />





<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ProfileId" value="@ViewBag.ProfileId" hidden/>
            </div>

            <div class="form-group">
                <label asp-for="RequestedCourseId" class="control-label"></label>
                <select asp-for="RequestedCourseId" class ="form-control" asp-items="ViewBag.RequestedCourseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OfferedCourseId" class="control-label"></label>
                <select asp-for="OfferedCourseId" class ="form-control" asp-items="ViewBag.OfferedCourseId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="commonButton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="commonButton">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
