@model CursoSwitcher.Models.RequestsModel

@{
    ViewData["Title"] = "Delete";
}

<h3 style="text-align:center">¿Esta seguro de que quiere cancelar?</h3>
<div>
    <hr />
    <dl class="row" hidden>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Profile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Profile.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequestedCourse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequestedCourse.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OfferedCourse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfferedCourse.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Visible_id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Visible_id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created_at)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created_at)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Updated_at)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Updated_at)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-row" style="text-align:center;">
            <div class="form-group col-md-6">
                <input type="submit" value="Cancelar" class="btn btn-danger" style="font-size:35px" />
            </div>
            <div class="form-group col-md-6">
                <a asp-action="Index" class="btn btn-success" style="font-size:35px">Volver</a>
            </div>
        </div>
    </form>
</div>
